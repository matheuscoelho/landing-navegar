    letter-spacing: 0.12em;
}

/* Marquee Container */
.tech-marquee-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
}

.tech-marquee-wrapper::before,
.tech-marquee-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 120px;
    z-index: 2;
    pointer-events: none;
}

.tech-marquee-wrapper::before {
    left: 0;
    background: linear-gradient(90deg, rgba(248,249,252,1) 0%, rgba(248,249,252,0) 100%);
