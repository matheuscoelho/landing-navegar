        direction: ltr;
    }

    .feature-image {
        order: -1;
        max-width: 500px;
        margin: 0 auto;
    }

    .feature-content {
        text-align: center;
    }

    .feature-list {
        align-items: center;
    }
}

/* ==========================================================================
   20. Process Section - Premium Timeline
   ========================================================================== */

.section-process {
    padding: 6rem 0;
    background: linear-gradient(180deg, var(--bg-secondary) 0%, rgba(102,126,234,0.03) 100%);
    position: relative;
}

.process-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);  /* FIX: Era 4 colunas - muito apertado */
    gap: 2.5rem;  /* FIX: Era 1.5rem - aumenta respiro */
    position: relative;
}

@media (max-width: 1024px) {
    .process-grid {
        grid-template-columns: repeat(2, 1fr);  /* 2 colunas em tablet */
    }
}

/* Timeline Connector Line */
.process-grid::before {
    content: '';
    position: absolute;
    top: 85px;
    left: calc(12.5% + 0.75rem);
    right: calc(12.5% + 0.75rem);
    height: 3px;
    background: linear-gradient(90deg, var(--color-dev) 0%, var(--color-integration) 33%, var(--color-consulting) 66%, var(--color-support) 100%);
    border-radius: 2px;
    z-index: 0;
}

.process-step {
    position: relative;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(102,126,234,0.1);
    border-radius: var(--radius-xl);
    padding: 2rem 1.5rem;
    text-align: center;
    transition: all var(--transition-slow);
    z-index: 1;
}

.process-step:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-glow-blue);
    border-color: transparent;
}

/* Step color variations */
.process-step:nth-child(1):hover { box-shadow: var(--shadow-glow-blue); }
.process-step:nth-child(2):hover { box-shadow: var(--shadow-glow-green); }
.process-step:nth-child(3):hover { box-shadow: var(--shadow-glow-purple); }
.process-step:nth-child(4):hover { box-shadow: var(--shadow-glow-orange); }

.step-number {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1;
    margin-bottom: 0.5rem;
    opacity: 0.12;
    font-family: var(--font-display);
}

.process-step:nth-child(1) .step-number { color: var(--color-dev); }
.process-step:nth-child(2) .step-number { color: var(--color-integration); }
.process-step:nth-child(3) .step-number { color: var(--color-consulting); }
.process-step:nth-child(4) .step-number { color: var(--color-support); }

.step-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.25rem;
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
    position: relative;
    z-index: 2;
}

.process-step:nth-child(1) .step-icon { background: var(--color-dev-light); }
.process-step:nth-child(2) .step-icon { background: var(--color-integration-light); }
.process-step:nth-child(3) .step-icon { background: var(--color-consulting-light); }
.process-step:nth-child(4) .step-icon { background: var(--color-support-light); }

.process-step:hover .step-icon {
    transform: scale(1.1);
}

.process-step:nth-child(1):hover .step-icon { background: var(--color-dev); }
.process-step:nth-child(2):hover .step-icon { background: var(--color-integration); }
.process-step:nth-child(3):hover .step-icon { background: var(--color-consulting); }
.process-step:nth-child(4):hover .step-icon { background: var(--color-support); }

.step-icon svg {
    width: 28px;
    height: 28px;
    transition: all var(--transition-base);
}

.process-step:nth-child(1) .step-icon svg { color: var(--color-dev); }
.process-step:nth-child(2) .step-icon svg { color: var(--color-integration); }
.process-step:nth-child(3) .step-icon svg { color: var(--color-consulting); }
.process-step:nth-child(4) .step-icon svg { color: var(--color-support); }

.process-step:hover .step-icon svg {
    color: white;
}

.step-title {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
}

.step-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.65;
    margin: 0;
}

.step-connector {
    display: none;
}

@media (max-width: 1024px) {
    .process-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .process-grid::before {
        display: none;
    }
}

@media (max-width: 640px) {
    .process-grid {
        grid-template-columns: 1fr;
    }
}

/* ==========================================================================
   21. Testimonials Section - Premium
   ========================================================================== */

.section-testimonials {
    padding: 6rem 0;
    background: linear-gradient(180deg, var(--bg-primary) 0%, rgba(139,92,246,0.03) 100%);
    position: relative;
}

/* Carousel Container */
.testimonials-carousel {
    position: relative;
    overflow: hidden;
    margin: 0 -1rem;
    padding: 0 1rem;
}

.testimonials-track {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
}

/* Legacy grid fallback */
.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
}

.testimonial-card {
    flex: 0 0 calc(33.333% - 1rem);
    min-width: calc(33.333% - 1rem);
    margin: 0 0.5rem;
    background: rgba(255,255,255,0.9);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(139,92,246,0.1);
    border-radius: var(--radius-xl);
    padding: 2rem;
    transition: all var(--transition-slow);
    position: relative;
}

.testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    opacity: 0;
    transition: opacity var(--transition-base);
}

.testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-glow-purple);
    border-color: transparent;
}

.testimonial-card:hover::before {
    opacity: 1;
}

.testimonial-quote-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.25rem;
}

.testimonial-quote-icon svg {
    width: 48px;
    height: 48px;
    color: var(--color-consulting);
    opacity: 0.3;
}

.testimonial-text {
    font-size: 1.05rem;
    color: var(--text-secondary);
    line-height: 1.75;
    font-style: italic;
    margin-bottom: 1.5rem;
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.testimonial-avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(139,92,246,0.2);
}

.testimonial-author-info {
    display: flex;
    flex-direction: column;
}

.testimonial-name {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-primary);
}

.testimonial-role {
    font-size: 0.8rem;
    color: var(--text-muted);
}

.testimonial-company {
    font-size: 0.85rem;
    color: var(--color-consulting);
    font-weight: 600;
}

.testimonial-rating {
    display: flex;
    gap: 0.25rem;
}

.star-icon {
    width: 16px;
    height: 16px;
    color: #FBBF24;
}

/* Carousel Controls */
.carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 2.5rem;
}

.carousel-prev,
.carousel-next {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid rgba(139,92,246,0.2);
    background: rgba(255,255,255,0.9);
    backdrop-filter: blur(8px);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
    color: var(--color-consulting);
}

.carousel-prev:hover,
.carousel-next:hover {
    background: var(--gradient-primary);
    border-color: transparent;
    color: white;
    transform: scale(1.1);
    box-shadow: var(--shadow-glow-purple);
}

.carousel-prev svg,
.carousel-next svg {
    width: 20px;
    height: 20px;
}

.carousel-dots {
    display: flex;
    gap: 0.5rem;
}

.carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: none;
    background: rgba(139,92,246,0.2);
    cursor: pointer;
    transition: all var(--transition-base);
    padding: 0;
}

.carousel-dot:hover {
    background: rgba(139,92,246,0.4);
}

.carousel-dot.active {
    background: var(--gradient-primary);
    width: 28px;
    border-radius: 5px;
}

/* Responsive Carousel */
@media (max-width: 1024px) {
    .testimonial-card {
        flex: 0 0 calc(50% - 1rem);
        min-width: calc(50% - 1rem);
    }

    .testimonials-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 640px) {
    .testimonial-card {
        flex: 0 0 calc(100% - 1rem);
        min-width: calc(100% - 1rem);
    }

    .testimonials-grid {
        grid-template-columns: 1fr;
    }

    .carousel-controls {
        gap: 0.75rem;
    }

    .carousel-prev,
    .carousel-next {
        width: 40px;
        height: 40px;
    }
}

