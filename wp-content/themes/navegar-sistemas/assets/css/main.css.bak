    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Badge colors per feature */
.feature-block:nth-child(1) .feature-badge {
    background: var(--color-dev-light);
    color: var(--color-dev);
}

.feature-block:nth-child(2) .feature-badge {
    background: var(--color-integration-light);
    color: var(--color-integration);
}

.feature-block:nth-child(3) .feature-badge {
    background: var(--color-consulting-light);
