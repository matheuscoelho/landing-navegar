}

.feature-title {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    line-height: 1.2;
}

.feature-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.75;
