.tech-item svg {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    color: var(--color-dev);
    transition: transform var(--transition-base);
}

.tech-item:hover svg {
    transform: scale(1.1);
}

.tech-item span,
.tech-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
}

@media (max-width: 768px) {
    .section-technologies {
        padding: 2rem 0;
    }

    .tech-marquee-wrapper::before,
    .tech-marquee-wrapper::after {
        width: 60px;
    }

    .tech-track {
        gap: 1rem;
    }

    .tech-item {
        padding: 0.65rem 1rem;
    }

    .tech-item svg {
        width: 22px;
        height: 22px;
    }

    .tech-item span,
    .tech-name {
        font-size: 0.8rem;
    }
}

/* ==========================================================================
   19. Features Section - Colored Alternating Layout
   ========================================================================== */

.section-features {
    background: var(--bg-primary);
}

.feature-block {
    padding: 6rem 0;
    border-bottom: none;
    position: relative;
}

/* Colored backgrounds for each feature */
