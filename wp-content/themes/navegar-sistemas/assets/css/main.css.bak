}

.feature-list {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    margin-bottom: 2rem;
}

.feature-list li {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    font-size: 1rem;
    color: var(--text-secondary);
}

/* List icon colors per feature */
.feature-block:nth-child(1) .feature-list li svg { color: var(--color-dev); }
.feature-block:nth-child(2) .feature-list li svg { color: var(--color-integration); }
.feature-block:nth-child(3) .feature-list li svg { color: var(--color-consulting); }

.feature-list li svg {
