.tech-marquee-wrapper::after {
    right: 0;
    background: linear-gradient(270deg, rgba(248,249,252,1) 0%, rgba(248,249,252,0) 100%);
}

.tech-marquee {
    display: flex;
    width: max-content;
    animation: marquee 35s linear infinite;
}

.tech-marquee:hover {
    animation-play-state: paused;
}

.tech-track {
    display: flex;
    gap: 1.5rem;
    padding: 0 0.75rem;
}

.tech-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    background: rgba(255,255,255,0.9);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(102,126,234,0.15);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    white-space: nowrap;
    cursor: default;
}

.tech-item:hover {
