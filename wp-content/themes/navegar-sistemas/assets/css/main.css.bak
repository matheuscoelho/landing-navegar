/* ==========================================================================
   18. Technologies Section - Premium Marquee
   ========================================================================== */

.section-technologies {
    padding: 5rem 0;  /* FIX: Era 3rem - 50% menor que outras seções (6rem) */
    background: linear-gradient(135deg, rgba(102,126,234,0.05) 0%, rgba(139,92,246,0.05) 50%, rgba(240,147,251,0.03) 100%);
    border-top: 1px solid rgba(102,126,234,0.1);
    border-bottom: 1px solid rgba(102,126,234,0.1);
    overflow: hidden;
}

.tech-header {
    text-align: center;
    margin-bottom: 2rem;
}

.tech-label {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-dev);
