.feature-block:nth-child(2) .feature-image img { box-shadow: var(--shadow-xl), 0 20px 60px rgba(34,197,94,0.15); }
.feature-block:nth-child(3) .feature-image img { box-shadow: var(--shadow-xl), 0 20px 60px rgba(139,92,246,0.15); }

@media (max-width: 1024px) {
    .feature-wrapper {
        grid-template-columns: 1fr;
        gap: 2.5rem;
